---
import '../styles/global.css';
import '../styles/hero.css';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ProblemSection from '../components/ProblemSection.astro';
import SolutionTriage from '../components/SolutionTriage.astro';
import SocialProofSection from '../components/SocialProofSection.astro';
import Footer from '../components/Footer.astro';
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AssetPartners株式会社 | BtoBマーケティング・AI活用・SEOコンサルティング</title>
    <meta name="description" content="事業資産を最大化する、AIと専門家のハイブリッド・グロース戦略。BtoBマーケティングの仕組み化と新規事業のグロースを、AIと専門家チームがワンストップで支援します。" />
    
    {/* OGP */}
    <meta property="og:type" content="website" />
    <meta property="og:title" content="AssetPartners株式会社 | BtoBマーケティング・AI活用・SEOコンサルティング" />
    <meta property="og:description" content="事業資産を最大化する、AIと専門家のハイブリッド・グロース戦略。" />
    <meta property="og:site_name" content="AssetPartners株式会社" />
    <meta property="og:locale" content="ja_JP" />
    
    {/* Twitter Card */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="AssetPartners株式会社" />
    <meta name="twitter:description" content="事業資産を最大化する、AIと専門家のハイブリッド・グロース戦略。" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <Header />
    <main class="flex-1">
      <Hero />
      <ProblemSection />
      <SolutionTriage />
      <SocialProofSection />
    </main>
    <Footer />
  </body>
</html>
