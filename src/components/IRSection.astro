---
const NEWS_ITEMS = [
  {
    date: "2025年10月31日",
    category: "インフォメーション",
    title: "公式YouTube「【GLM決算解説】2025年2Q決算のおさらい｜持続成長を支える新規事業と出口戦略とは？」公開のお知らせ",
    color: "border-l-4 border-[#9933FF]",
    badge: "bg-[#9933FF]",
  },
  {
    date: "2025年10月24日",
    category: "プレスリリース",
    title: "GLMが世界一斉清掃活動イベント「World Cleanup Day」に参画",
    color: "border-l-4 border-[#FF9900]",
    badge: "bg-[#FF9900]",
  },
  {
    date: "2025年10月22日",
    category: "インフォメーション",
    title: "公式YouTube「【若者・女性・外国人が牽引】東京への人口集中、コロナ禍前を超える勢い ～グローバル都市不動産研究所レポート～」公開のお知らせ",
    color: "border-l-4 border-[#9933FF]",
    badge: "bg-[#9933FF]",
  },
];
---

<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- IR Library -->
    <div class="mb-20">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">
        IR Library
      </h2>
      <p class="text-base md:text-lg text-gray-700 mb-8">
        最新のIR資料をご覧いただけます
      </p>
      <button class="border border-gray-400 text-gray-900 hover:bg-gray-50 px-6 py-2 rounded text-sm font-bold transition-colors flex items-center gap-2">
        詳しくみる
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <!-- Pickup News -->
    <div>
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-gray-900">
        Pickup News
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {NEWS_ITEMS.map((item, index) => (
          <div key={index} class={`${item.color} pl-6 py-4 hover:bg-gray-50 transition-colors cursor-pointer bg-white`}>
            <div class="flex items-center gap-3 mb-2 flex-wrap">
              <span class="text-sm font-bold text-gray-600">
                {item.date}
              </span>
              <span class={`inline-block px-3 py-1 text-xs font-bold text-white rounded ${item.badge}`}>
                {item.category}
              </span>
            </div>
            <h3 class="text-base md:text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors">
              {item.title}
            </h3>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

