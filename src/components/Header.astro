---
const NAV_ITEMS = [
  { key: "top", labelJa: "トップ", labelEn: "Top", href: "/", color: "bg-blue-600" },
  { key: "about", labelJa: "私たちについて", labelEn: "About", href: "/about", color: "bg-blue-700" },
  { key: "services", labelJa: "サービス", labelEn: "Services", href: "/services", color: "bg-purple-600" },
  { key: "cases", labelJa: "導入事例", labelEn: "Cases", href: "/case-studies", color: "bg-green-600" },
  { key: "content", labelJa: "コンテンツハブ", labelEn: "Content", href: "/content", color: "bg-orange-600" },
];
---

<header class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
  <div class="max-w-full px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 sm:h-20">
      <!-- Logo -->
      <div class="flex items-center gap-2 flex-shrink-0">
        <a href="/" class="flex items-center gap-2">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-purple-600 rounded-lg flex items-center justify-center font-bold text-xs text-white">
            AP
          </div>
          <div class="hidden sm:block text-xs font-bold leading-tight">
            <div class="text-gray-900">ASSET</div>
            <div class="text-gray-900">PARTNERS</div>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-0">
        {NAV_ITEMS.map((item) => (
          <a
            href={item.href}
            class={`px-3 sm:px-4 py-2 sm:py-3 text-xs font-bold text-white transition-opacity hover:opacity-90 whitespace-nowrap ${item.color}`}
          >
            {item.labelJa}
          </a>
        ))}
      </nav>

      <!-- CTA Buttons -->
      <div class="hidden md:flex items-center gap-2 sm:gap-3">
        <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold px-3 sm:px-4 py-2 rounded text-xs sm:text-sm transition-colors whitespace-nowrap">
          無料相談
        </button>
        <button class="bg-purple-600 hover:bg-purple-700 text-white font-bold px-3 sm:px-4 py-2 rounded text-xs sm:text-sm transition-colors whitespace-nowrap">
          SaaSデモ
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button class="lg:hidden text-gray-700 hover:text-gray-900 transition-colors p-2" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>
