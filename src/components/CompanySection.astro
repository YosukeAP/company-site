---
const COMPANIES = [
  {
    id: 1,
    name: "GLOBAL LINK MANAGEMENT",
    desc: "投資用不動産の企画・販売・管理を行っています",
    borderColor: "border-t-4 border-[#9933FF]",
    bgColor: "bg-purple-50",
  },
  {
    id: 2,
    name: "株式会社G&G Community",
    desc: "マンション・ビルの管理・運営を行っています",
    borderColor: "border-t-4 border-[#FF9900]",
    bgColor: "bg-orange-50",
  },
  {
    id: 3,
    name: "SAGLアドバイザーズ株式会社",
    desc: "不動産ファンドの運用、アドバイザリーを行っています",
    borderColor: "border-t-4 border-[#00CCFF]",
    bgColor: "bg-cyan-50",
  },
  {
    id: 4,
    name: "AtPeak株式会社",
    desc: "ITおよびDX領域における事業を行っています",
    borderColor: "border-t-4 border-[#FF3333]",
    bgColor: "bg-red-50",
  },
];
---

<!-- Group Section -->
<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-gray-900">
      グループ企業
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {COMPANIES.map((company) => (
        <div
          key={company.id}
          class={`${company.bgColor} ${company.borderColor} p-6 rounded-lg hover:shadow-lg transition-shadow cursor-pointer`}
        >
          <h3 class="text-lg font-bold text-gray-900 mb-2">
            {company.name}
          </h3>
          <p class="text-sm text-gray-700">
            {company.desc}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Stock Information Section -->
<section class="py-16 md:py-24 bg-[#f5f5f5]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-gray-900">
      株価情報
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Stock Chart -->
      <div class="bg-white rounded-lg p-8 border border-[#0066FF] border-l-4">
        <div class="text-sm font-bold text-gray-600 mb-2">
          TSE:3486
        </div>
        <div class="text-3xl font-bold text-gray-900 mb-2">
          2,671.0
        </div>
        <div class="text-sm text-gray-600 mb-4">
          yen
        </div>
        <div class="text-lg font-bold text-green-600">
          +16.0 (+0.60%)
        </div>
      </div>

      <!-- Stock Info -->
      <div class="bg-white rounded-lg p-8">
        <h3 class="text-xl font-bold text-gray-900 mb-4">
          株価情報
        </h3>
        <p class="text-gray-700 mb-4">
          最新の株価情報をご覧いただけます。
        </p>
        <button class="border border-gray-400 text-gray-900 hover:bg-gray-50 px-6 py-2 rounded text-sm font-bold transition-colors">
          詳しくはこちら
        </button>
      </div>
    </div>
  </div>
</section>

