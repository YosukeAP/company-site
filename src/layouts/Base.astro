---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
	ogType?: string;
	ogUrl?: string;
}

const { 
	title = '会社サイト',
	description = '会社サイトのホームページです。',
	ogType = 'website',
	ogUrl
} = Astro.props;

const siteName = '会社サイト';
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		
		{/* OGP */}
		<meta property="og:type" content={ogType} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		{ogUrl && <meta property="og:url" content={ogUrl} />}
		<meta property="og:site_name" content={siteName} />
		<meta property="og:locale" content="ja_JP" />
		
		{/* Twitter Card */}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
	</head>
	<body class="mx-auto max-w-screen-lg p-6">
		<header class="flex items-center justify-between mb-8 pb-4 border-b">
			<a href="/" class="text-xl font-bold hover:text-blue-600 transition-colors">
				{siteName}
			</a>
			<nav class="flex gap-6">
				<a 
					href="/" 
					class={`hover:text-blue-600 transition-colors ${currentPath === '/' ? 'text-blue-600 font-semibold' : ''}`}
				>
					ホーム
				</a>
				<a 
					href="/blog" 
					class={`hover:text-blue-600 transition-colors ${currentPath.startsWith('/blog') ? 'text-blue-600 font-semibold' : ''}`}
				>
					ブログ
				</a>
				<a 
					href="/contact" 
					class={`hover:text-blue-600 transition-colors ${currentPath === '/contact' ? 'text-blue-600 font-semibold' : ''}`}
				>
					お問い合わせ
				</a>
			</nav>
		</header>
		
		<main class="mt-8">
			<slot />
		</main>
		
		<footer class="mt-16 pt-8 border-t text-sm text-gray-500 text-center">
			<p>© {new Date().getFullYear()} {siteName}. All rights reserved.</p>
		</footer>
	</body>
</html>
